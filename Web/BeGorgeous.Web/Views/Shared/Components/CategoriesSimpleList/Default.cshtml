@using BeGorgeous.Web.ViewModels.Categories
@model CategoriesListViewModel

<section class="wt-section bg-primary">
    <div class="container">
        <div class="row justify-content-md-center text-center pb-lg-4 mb-lg-5 mb-4">
            <div class="col-md-8 text-center w-md-50 mx-auto mb-0 ">
                <h2 class="mb-md-2">Categories</h2>
                <p>We provide services that make you amazing. Taking care of all of your needs.</p>
            </div>
        </div>
        <!-- Feature Blocks -->
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <img src="@category.ImageUrl" class="card-img-top" alt="img">
                        <div class="card-body">
                            <h5>@category.Name</h5>
                            <p class="card-text">@category.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- End Feature Blocks -->
    </div>
</section>