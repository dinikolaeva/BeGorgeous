@using BeGorgeous.Common
@using BeGorgeous.Web.ViewModels.Home
@model IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}
<meta name="viewport" content="width=device-width, initial-scale=1">

<section class="wt-section" id="services">
    <div class="container">
        <div class="row justify-content-md-center text-center pb-lg-4 mb-lg-5 mb-4">
            <div class="col-md-8 text-center w-md-50 mx-auto mb-0">
                <h2 class="mb-md-2">Countries where you may find us</h2>
                <p class="lead text-muted">BE GORGEOUS waiting for you here:</p>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var country in Model.Countries)
        {
            <div class="col-lg-4 mb-5 mb-lg-0 text-center" data-aos="fade-up" data-aos-easing="linear" data-aos-delay="100">
                <div class="d-block mb-4">
                    <img src="assets/img/intro/city.png" width="250" class="pr-4" alt="">
                </div>
                <h4 class="h5">@country.Name</h4>
            </div>
        }
    </div>
</section>

<div class="row">
    <div class="col">
        <div class="button services_button ml-auto mr-auto">
            <a asp-area="" asp-controller="Salons" asp-action="Index"><span>Choose a Salon</span><span>Choose a Salon</span></a>
        </div>
    </div>
</div>